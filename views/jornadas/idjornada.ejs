<script>
	
$(document).ready(function(){  

	$("#eliminar").click(function(e){
		e.preventDefault();
		console.log('**entre');

		var id = $("#localidad").attr('data');
			
		$.ajax({
    		url: '/castraciones/jornadas/' + id + '/delete',
    		type: 'DELETE',
    		success: function(result) {
        	$(location).attr('href','/castraciones/jornadas');
    		}
		});
    
	});


});


</script>



</body>
</html>